<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:minHeight="150dp"
                                                   android:maxHeight="250dp">

    <ImageView
            android:layout_width="0dp"
            app:srcCompat="@drawable/puppy"
            android:id="@+id/img_item" android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:cropToPadding="false" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:adjustViewBounds="true"
            android:layout_height="0dp" android:layout_marginStart="2dp" android:layout_marginEnd="2dp"
            android:layout_marginTop="8dp" android:contentDescription="item"/>
</androidx.constraintlayout.widget.ConstraintLayout>